<!-- Heading title -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message display -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<% }) %>
    </ul>
<% } %>

<div class="register">
    <p>All fields are required</p>
    <form id="registerForm" action="/account/register" method="post">
        <label for="account_firstname">First name</label>
        <input type="text" id="account_firstname" name="account_firstname" required>

        <label for="account_lastname">Last name</label>
        <input type="text" id="account_lastname" name="account_lastname" required>

        <label for="account_email">Email address</label>
        <input type="email" id="account_email" name="account_email" required>

        <label for="account_password">Password</label>
        <span class="password-requirements">Password must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character</span>
        <div class="password-container">
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <button type="button" id="showPassword">Show</button>
        </div>
        

        <button type="submit">Register</button>
    </form>
</div>
